.header {
  box-sizing: border-box;
  width: 100%;
  text-align: center;
  height: 40px;
  padding: 3px 0;
  background-color: #35495e;
}

.title {
  height: 40px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 18px;
  font-weight: 400;
  color: #fff;
  line-height: 40px;
}

.content {
  flex: 1;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.rope-canvas {
  background: pink;
  width: 750rpx;
  height: 900rpx;
}

.play {
  box-sizing: border-box;
  flex: 1;
  width: 100%;
  padding: 10px;
}

.play button {
  width: 100%;
  height: 100%;
  font-size: 36px;
}

.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.6);
  background-color: rgba(0,0,0,.6);
  z-index: 3001;
}

.maskcontent {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: orange;
  font-size: 26px;
}

.maskplay button {
  margin-top: 20px;
  color: #fff;
  font-size: 26px;
}
